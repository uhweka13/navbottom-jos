<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageButton
                android:id="@+id/im_settings_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profiledr"
                android:src="@drawable/ic_account"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_settings_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toRightOf="@id/im_settings_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_settings_tip1"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/tv_settings_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy, Security, change number"
                app:layout_constraintTop_toBottomOf="@id/tv_settings_account"
                app:layout_constraintLeft_toRightOf="@id/im_settings_1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageButton
                android:id="@+id/im_settings_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profiledr"
                android:src="@drawable/ic_message"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_settings_chats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toRightOf="@id/im_settings_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_settings_tip2"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/tv_settings_tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy, Security, change number"
                app:layout_constraintTop_toBottomOf="@id/tv_settings_chats"
                app:layout_constraintLeft_toRightOf="@id/im_settings_2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageButton
                android:id="@+id/im_settings_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profiledr"
                android:src="@drawable/ic_notifications"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_settings_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toRightOf="@id/im_settings_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_settings_tip3"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/tv_settings_tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy, Security, change number"
                app:layout_constraintTop_toBottomOf="@id/tv_settings_notification"
                app:layout_constraintLeft_toRightOf="@id/im_settings_3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</ScrollView>
